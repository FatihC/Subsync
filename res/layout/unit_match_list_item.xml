<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtUntDoor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/pre_text"
        android:minHeight="?android:attr/listPreferredItemHeight" 
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edtUntWiring"
        android:layout_width="0dp"
        android:minHeight="?android:attr/listPreferredItemHeight" 
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="number" >
    </EditText>

    <Spinner
        android:id="@+id/spUntBrand"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight" 
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/address_item_text" />

    <EditText
        android:id="@+id/edtUntMeterNo"
        android:layout_width="0dp"
        android:minHeight="?android:attr/listPreferredItemHeight" 
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_weight="1"
        android:ems="10" />

    <Spinner
        android:id="@+id/spUntStat"
        android:minHeight="?android:attr/listPreferredItemHeight" 
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/address_item_text" />

    <TextView
        android:id="@+id/txtUntSbs"
        android:minHeight="?android:attr/listPreferredItemHeight" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/pre_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>