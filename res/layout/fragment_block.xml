<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/blockSelectedValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/pre_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_dark" >
    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="1" >

        <TextView
            android:id="@+id/headerBlockText"
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:gravity="center"
            android:maxWidth="900dp"
            android:text="@string/pre_text"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageButton
            android:id="@+id/addNewBlockAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_row="0"
            android:background="@android:color/holo_blue_dark"
            android:contentDescription="@string/pre_text"
            android:src="@drawable/add" />
    </GridLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_blue_dark" >
    </FrameLayout>

    <EditText
        android:id="@+id/searchBlockText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textCapWords" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/blockList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>